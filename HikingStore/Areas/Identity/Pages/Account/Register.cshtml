@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="min-vh-100">
    <div class="inner-wrapper mb-3">
        <div class="container-fluid no-padding">
            <div class="row no-gutters overflow-auto">
                <div class="col-md-14">
                    <div class="section-2 user-page main-padding">
                        <div class="login-sec">
                            <div class="login-box">
                                <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                                    <h4 class="text-light-black fw-600">Create a new account.</h4>
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <hr />
                                    <div class="form-group">
                                        <label asp-for="Input.Email"></label>
                                        <input asp-for="Input.Email" class="form-control" />
                                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Input.Password"></label>
                                        <input asp-for="Input.Password" class="form-control" />
                                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Input.ConfirmPassword"></label>
                                        <input asp-for="Input.ConfirmPassword" class="form-control" />
                                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                    </div>
                                    <button type="submit" class="btn-second btn-submit full-width">Register</button>
                                </form>
                                <br />
                                <p style="margin-left: 140px;">or sign up with:</p>
                                <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal" style="margin-left: 160px;">
                                    <div>
                                        <p>
                                            @foreach (var provider in Model.ExternalLogins)
                                            {
                                            //<button type="submit" class="btn-second btn-submit full-width" style="color:blue" name="provider" value="Google" title="Log in using your Google account">@provider.DisplayName</button>

                                                <button type="submit" class="btn btn-link btn-floating mx-1" name="provider" value="Google">
                                                    <i class="fab fa-google"></i>
                                                </button>
                                            }
                                        </p>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
