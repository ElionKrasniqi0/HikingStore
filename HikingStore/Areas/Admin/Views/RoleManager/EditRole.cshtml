@using HikingStore.Areas.Admin.ViewModel
@model EditRoleNameViewModel

@{
    ViewBag.Title = "Edit Role Name";
}

<div class="container">
    <h1>Edit Role</h1>

    <form class="mt-3">
        <div class="form-group row">
            <label asp-for="Id" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Id" disabled class="form-control">
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="RoleName" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="RoleName" class="form-control">
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>
        </div>
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-sm-10">
                <input asp-area="Admin" asp-controller="RoleManager" asp-action="EditRoleConfirmed" asp-route-RoleName="@Model.RoleName" asp-route-Id="@Model.Id" type="submit" value="Save" class="btn btn-primary">
                <a asp-action="" class="btn btn-primary">Cancel</a>
            </div>
        </div>
    </form>
    <div class="card">
        <div class="card-header">
            <h3>Users in this role</h3>
        </div>
        <div class="card-body">
            @if (Model.Users.Any())
            {
                foreach (var user in Model.Users)
                {
                    <h5 class="card-title">@user</h5>
                }
            }
            else
            {
                <h5 class="card-title">None at the moment</h5>
            }
        </div>
    </div>
</div>