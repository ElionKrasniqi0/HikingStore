@using HikingStore.Data
@using Microsoft.AspNetCore.Identity;
@inject SignInManager<IdentityUser> SignInManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="Content-Type" content="text/html;charset=UTF-16">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] -     HikingStore</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!-- JQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.js"></script>
    <script src="https://code.jquery.com/ui/1.13.1/jquery-ui.js"></script>
    <!-- JQuery DateTimePicker -->
    <script src="//cdnjs.cloudflare.com/ajax/libs/timepicker/1.3.5/jquery.timepicker.min.js"></script>
    <!-- Bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Fontawesome -->
    <link href="~/css/font-awesome.css" rel="stylesheet" />
    <!-- Flaticons -->
    <link href="~/css/font/flaticon.css" rel="stylesheet" />
    <!-- Swiper Slider -->
    <link href="~/css/swiper.min.css" rel="stylesheet" />
    <!-- Range Slider -->
    <link href="~/css/ion.rangeSlider.min.css" rel="stylesheet" />
    <!-- Custom Stylesheet -->
    <link href="~/css/style.css" rel="stylesheet" />
    <!-- Custom Responsive -->
    <link href="~/css/responsive.css" rel="stylesheet" />
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700&amp;display=swap" rel="stylesheet" />
    @RenderSection("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><span style="font-weight:700;"></span><span style="font-weight:800; color:olivedrab;"> Hiking </span><span style="font-weight:800; color:black;"> Store </span> </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Product">Product</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Contact">Contact</a>
                        </li>
                    </ul>


                    <div id="userNav" class="nav-links">
                        @if (SignInManager.IsSignedIn(User) && !User.IsInRole("Admin"))
                        {
                            if (User.IsInRole("RestaurantOwner"))
                            {
                                <span class="nav-link hover-animation myTooltip">
                                    <a id="restaurantManager" asp-area="UserRestaurantManager" asp-controller="RestaurantManager" asp-action="Index">
                                        <svg xmlns="http://www.w3.org/2000/svg" aria-hidden="true" role="img" width="1.7em" height="1.7em" preserveAspectRatio="xMidYMid meet" viewBox="0 0 24 24"><path d="M12.5 1.5c-1.77 0-3.33 1.17-3.83 2.87C8.14 4.13 7.58 4 7 4a4 4 0 0 0-4 4a4.01 4.01 0 0 0 3 3.87V19h13v-7.13c1.76-.46 3-2.05 3-3.87a4 4 0 0 0-4-4c-.58 0-1.14.13-1.67.37c-.5-1.7-2.06-2.87-3.83-2.87m-.5 9h1v7h-1v-7m-3 2h1v5H9v-5m6 0h1v5h-1v-5M6 20v1a1 1 0 0 0 1 1h11a1 1 0 0 0 1-1v-1H6Z" /></svg>
                                    </a>
                                    <span class="tooltiptext" style="margin: 0 0 -20px -95px; width: 180px;">Manage your <span style="/*color:red;*/ text-decoration:underline; text-decoration-thickness: 3px; text-decoration-color: red;">Restaurant</span></span>
                                </span>
                            }

                        }


                        <partial name="_LoginPartial" />



                    </div>
                </div>
            </div>

            
                <a href="/Carts/Cart" class="btn px-0 ml-3">
                    <i class="fas fa-shopping-cart"></i>
                    <span class="badge text-secondary border border-secondary rounded-circle"
                          style="padding-bottom: 2px;"></span>
                </a>
            
        </nav>
    </header>
    <div class="min-vh-100 main-container"> @RenderBody() </div>

    <footer class="section-padding bg-light-theme pt-0 u-line bg-black mt-5 mt-auto">
        <div class="container">
            <div class="row">
                <div class="col-xl col-lg-4 col-md-4 col-sm-6">
                    <div class="footer-contact">
                        <h6 class="text-custom-white">Need Help</h6>
                        <ul>
                            <li class="fw-600">
                                <span class="text-light-white">Call Us</span> <a href="tel:+(383) 045 804 555" class="text-custom-white">+(383) 045 804 555</a>
                            </li>
                            <li class="fw-600">
                                <span class="text-light-white">Email Us</span> <a href="mailto:hikingstore@outlook.com" class="text-custom-white">hikingstore@outlook.com</a>
                            </li>
                            <li class="fw-600">
                                <a href="https://mobile.twitter.com/" target="_blank" class="text-custom-white">Join our twitter</a>
                            </li>
                            <li class="fw-600">
                                <a href="https://www.instagram.com/" target="_blank" class="text-custom-white">Join our instagram</a>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="col-xl col-lg-4 col-md-4 col-sm-6">
                    <div class="footer-links">
                        <h6 class="text-custom-white">Get to Know Us</h6>
                        <ul>
                            <li>
                                <a asp-area="" asp-controller="Home" asp-action="AboutUs" class="text-light-white fw-600">About Us</a>
                            </li>
                            <li>
                                <a href="https://www.linkedin.com/" class="text-light-white fw-600">Socialize</a>
                            </li>
                            <li>
                                <a asp-area="Identity" asp-page="/Account/Login" class="text-light-white fw-600">Login</a>
                            </li>
                           
                        </ul>
                    </div>
                </div>
                <div class="col-xl col-lg-4 col-md-4 col-sm-6">
                    <div class="footer-links">
                        <h6 class="text-custom-white">Doing Business</h6>
                        <ul>
                            <li>
                                <a href="mailto:virtual.waiter1@gmail.com" target="_blank" class="text-light-white fw-600">Suggest an Idea</a>
                            </li>
                            <li>
                                <a asp-area="" asp-controller="Home" asp-action="AboutUs" class="text-light-white fw-600">Be a Partner restaurant</a>
                            </li>
                            <li>
                                <a asp-area="Identity" asp-page="/Account/Register" class="text-light-white fw-600">Create an Account</a>
                            </li>
                            <li>
                                <a href="mailto:hikingstore@outlook.com" target="_blank" class="text-light-white fw-600">Help</a>
                            </li>
                        </ul>
                    </div>
                </div>

                <div class="col-xl col-lg-4 col-md-4 col-sm-6">
                    <div class="footer-links">
                        <h6 class="text-custom-white">Let Us Help You</h6>
                        <ul>
                            <li>
                                <a asp-area="Identity" asp-page="/Account/Manage/Index" class="text-light-white fw-600">Account Details</a>
                            </li>
                            <li>
                                <a asp-area="" asp-controller="Reservations" asp-action="UserReservations" class="text-light-white fw-600">Reservations History</a>
                            </li>
                            <li>
                                <a asp-area="" asp-controller="Restaurants" asp-action="Index" class="text-light-white fw-600">Find restaurant</a>
                            </li>

                            <li>
                                <a asp-area="" asp-controller="Reservations" asp-action="UserReservations" class="text-light-white fw-600">Track Reservations</a>
                            </li>
                        </ul>
                    </div>
                </div>
                }
                <div class="col-md-12">
                    <div class="ft-social-media">
                        <h6 class="text-center text-light-white">Follow us</h6>
                        <ul>
                            <li>
                                <a href="https://www.facebook.com/" target="_blank"><i class="fab fa-facebook-f"></i></a>
                            </li>
                            <li>
                                <a href="https://mobile.twitter.com/" target="_blank"><i class="fab fa-twitter"></i></a>
                            </li>
                            <li>
                                <a href="https://www.instagram.com/" target="_blank"><i class="fab fa-instagram"></i></a>
                            </li>
                            <li>
                                <a href="https://www.linkedin.com/" target="_blank"><i class="fab fa-linkedin"></i></a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <!-- Popper -->
    <script src="~/js/popper.min.js"></script>
    <!-- Bootstrap -->
    <script src="~/js/bootstrap.min.js"></script>
    <!-- Range Slider -->
    <script src="~/js/ion.rangeSlider.min.js"></script>
    <!-- Swiper Slider -->
    <script src="~/js/swiper.min.js"></script>
    <!-- sticky sidebar -->
    <script src="~/js/sticksy.js"></script>
    <!-- Munch Box Js -->
    <script src="~/js/munchbox.js"></script>
    @*<script src="~/lib/jquery/dist/jquery.min.js"></script>*@
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://kit.fontawesome.com/c798e80c62.js" crossorigin="anonymous"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
