<div class="navbar-nav align-items-center">
    @if (SignInManager.IsSignedIn(User))
    {
        <div class="dropdown">
            <button class=" dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                <i class="fas fa-user" style="font-size:18px;"></i>
            </button>
            <ul class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton1">
                <li><a class="dropdown-item text-wrap" style="text-overflow:ellipsis;" data-toggle="tooltip" data-placement="bottom" title="Account" asp-area="Identity" asp-page="/Account/Manage/Index">Hello @User.Identity.Name</a></li>
                @if (SignInManager.IsSignedIn(User) && User.IsInRole("Admin"))
                {
                    <li><a class="dropdown-item" asp-area="Admin" asp-controller="Home" asp-action="Index">Admin</a></li>
                }
               
                <li>
                    <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                        <button type="submit" class="dropdown-item">Logout</button>
                    </form>
                </li>
            </ul>
        </div>

    }
    else
    {
        <a class="nav-link hover-animation text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>

        <a class="nav-link hover-animation text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
    }
</div>
