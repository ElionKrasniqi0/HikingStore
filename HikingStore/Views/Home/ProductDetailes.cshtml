@model Product

<!-- Shop Detail Start -->
<div class="container-fluid pb-5">
    <form asp-action="AddToCart" asp-controller="Carts" asp-route-ProId=@Model.ProId method="post">

        <div class="row px-xl-5">
            <div class="col-lg-4 mb-30">
                <div id="product-carousel" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner ">
                        <div class="carousel-item active">
                            <img class="w-100 h-100" src="~/Product/@Model.ProImage" alt="Image">
                        </div>

                    </div>
                </div>
            </div>

            <div class="col-lg-4 h-auto mb-30">
                <div class="h-100  p-30">
                    <h3>@Model.ProName</h3>

                    <h3 class="font-weight-semi-bold mb-4">€@Model.Price</h3>
                    <p class="mb-4">
                        @Model.Descreption
                    </p>

                    <div class="d-flex align-items-center mb-4 pt-2">
                        <div class="input-group quantity mr-3" style="width: 130px;">
                            <div class="input-group-btn">
                                <a class="btn-second  btn-submit btn-minus">
                                        <i class="fa fa-minus"></i>
                                    </a>
                            </div>
                             
                        <input type="text" id="qtyInput" name="qty" class="form-control border-0 text-center" value="1">
                            <div class="input-group-btn">
                                <a class="btn-second  btn-submit btn-plus">
                                    <i class="fa fa-plus"></i>
                                </a>
                            </div>
                        </div>
                       
                        <button type="submit" class="btn-second  btn-submit px-3">
                            <i class="fa fa-shopping-cart mr-1"></i> Add To
                            Cart
                        </button>
                    
                    </div>
                </div>
            </div>
    
        </div>
    </form>

</div>
<script>
    $(document).ready(function () {
        $('.btn-minus').click(function () {
            var qtyInput = $('#qtyInput');
            var qtyValue = parseInt(qtyInput.val());
            if (qtyValue > 1) {
                qtyValue--;
                qtyInput.val(qtyValue);
            }
        });

        $('.btn-plus').click(function () {
            var qtyInput = $('#qtyInput');
            var qtyValue = parseInt(qtyInput.val());
            qtyValue++;
            qtyInput.val(qtyValue);
        });
    });
</script>
<!-- Shop Detail End -->