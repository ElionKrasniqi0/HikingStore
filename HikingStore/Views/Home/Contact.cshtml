@model Contact
<!-- Contact Start -->
<div class="container-fluid">
    <h2 class="section-title position-relative text-uppercase mx-xl-5 mb-4">
        <span class=" pr-3">
            Contact
            Us
        </span>
    </h2>
    <div class="row px-xl-5">
        <div class="col-lg-7 mb-5">
            <div class="contact-form  p-30">
                <div id="success"></div>
                <form asp-action="Contact" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="control-group">
                        <input type="text" class="form-control" placeholder="Your Name"
                               asp-for="Name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="control-group">
                        <input type="email" class="form-control" placeholder="Your Email"
                               asp-for="Email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="control-group">
                        <input type="text" class="form-control" placeholder="Subject"
                               asp-for="Subject" />
                        <span asp-validation-for="Subject" class="text-danger"></span>
                    </div>
                    <div class="control-group">
                        <textarea class="form-control" rows="8" id="message" placeholder="Message"
                                  asp-for="Message"></textarea>
                        <span asp-validation-for="Message" class="text-danger" ></span>
                    </div>
                    <div>
                        <button class="btn btn-danger py-2 px-4" type="submit">
                            Send
                            Message
                        </button>
                    </div>
                </form>
            </div>
        </div>
        <div class="col-lg-5 mb-5">

            <div class=" p-30 mb-3">
                <p class="mb-2"><i class="fa fa-map-marker-alt text-secondary mr-3"></i>Meto Bajraktari,Prishtina</p>
                <p class="mb-2"><i class="fa fa-envelope text-secondary mr-3"></i>hikingstore@outlook.com</p>
                <p class="mb-2"><i class="fa fa-phone-alt text-secondary mr-3"></i>+(383) 045 804 555</p>
            </div>
        </div>
    </div>
</div>
<!-- Contact End -->